<br>
<center><h5>Zona Motivasi</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_motivasi_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tanggal</th>
      <th scope="col">Materi</th>
      <th scope="col">Pemateri</th>
      <th scope="col">Ringkasan </th>
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
<% @tr_motivasis.each_with_index do |tr_motivasi, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_motivasi.tanggal %> </td>
      <td> <%= tr_motivasi.materi %> </td>
      <td> <%= tr_motivasi.pemateri %> </td>
      <td> <%= tr_motivasi.ringkasan %> </td>
     <td class="text-center">
        <%= link_to 'Delete',tr_motivasi_path(tr_motivasi), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_motivasi_path(tr_motivasi), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_motivasi_path(tr_motivasi), class: 'btn btn-primary' %>
              
            </td>
      <% end %>
</tbody>
</tr>
