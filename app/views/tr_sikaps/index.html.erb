<br>
<center><h5>Catatan Sikap</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_sikap_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tanggal</th>
      <th scope="col">Jenis Kode</th>
      <th scope="col">Kode</th>
      <th scope="col">Saksi</th>
      <th scope="col">Status</th>
      <% if current_ms_user.role == "2" %>
      <th scope="col">Nama</th>
      <% end %>
      
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
 <% if current_ms_user.role == "1" %>
<% @tr_sikap.each_with_index do |tr_sikap, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_sikap.tanggal %> </td>
      <td> <%= tr_sikap.jenis_kode %> </td>
      <td> <%= tr_sikap.kode %> </td>
      <td> <%= tr_sikap.saksi %> </td>
      <td> <%= tr_sikap.status %> </td>
     <td class="text-center">
        <%= link_to 'Delete',tr_sikap_path(tr_sikap), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_sikap_path(tr_sikap), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_sikap_path(tr_sikap), class: 'btn btn-primary' %>
              
    </td>
</tbody>
    <% end %>
    <% end %>
      <% if current_ms_user.role == "2" %>
      <% @tr_sikaps.each_with_index do |tr_sikaps, index|%>
      <tbody>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_sikaps.tanggal %> </td>
      <td> <%= tr_sikaps.jenis_kode %> </td>
      <td> <%= tr_sikaps.kode %> </td>
      <td> <%= tr_sikaps.saksi %> </td>
      <td> <%= tr_sikaps.status %> </td>
      <td> <%= tr_sikaps.nama %> </td>
      <td class="text-center">
        <%= link_to 'Setuju',activate_path(id:tr_sikaps.id), class: 'btn btn-primary', method: :patch%> 
      </td>
  <% end %>
  <% end %>
</tbody>


</tr>
