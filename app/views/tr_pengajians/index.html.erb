<br>
<center><h5>Pengajian Malam</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_pengajian_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tanggal</th>
      <th scope="col">Judul</th>
      <th scope="col">Kesimpulan</th>
      <% if current_ms_user.role == "2" %>
      <th scope="col">Nama</th>
      <% end %>
      <th scope="col">Status</th>
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
  <% if current_ms_user.role == "1" %>
<% @tr_pengajians.each_with_index do |tr_pengajian, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_pengajian.tanggal %> </td>
      <td> <%= tr_pengajian.judul %> </td>
      <td> <%= tr_pengajian.kesimpulan %> </td>
      <td> <%= tr_pengajian.status %> </td>
     <td class="text-center">
        <%= link_to 'Delete',tr_pengajian_path(tr_pengajian), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_pengajian_path(tr_pengajian), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_pengajian_path(tr_pengajian), class: 'btn btn-primary' %>
              
            </td>
     
</tbody>
</tr>
 <% end %>
  <% end %>
   <% if current_ms_user.role == "2" %>
<% @tr_pengajian.each_with_index do |tr_pengajian, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_pengajian.tanggal %> </td>
      <td> <%= tr_pengajian.judul %> </td>
      <td> <%= tr_pengajian.kesimpulan %> </td>
      <td> <%= tr_pengajian.nama %> </td>
      <td> <%= tr_pengajian.status %> </td>
     <td class="text-center">
        <%= link_to 'Setuju',activate_pengajian_path(id:tr_pengajian.id), class: 'btn btn-primary', method: :patch%> 
      </td>
     
</tbody>
</tr>
 <% end %>
  <% end %>