<br>
<center><h5>Ihktisar Kegiatan Keagamaan</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_keagamaan_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tanggal</th>
      <th scope="col">Judul</th>
      <th scope="col">Kesimpulan</th>
      <% if current_ms_user.role == "2" %>
      <th scope="col">Nama</th>
      <% end %>
      <th scope="col">Status</th>
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
    <% if current_ms_user.role == "1" %>
<% @tr_keagamaans.each_with_index do |tr_keagamaan, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_keagamaan.tanggal %> </td>
      <td> <%= tr_keagamaan.judul %> </td>
      <td> <%= tr_keagamaan.kesimpulan %> </td>
      <td> <%= tr_keagamaan.status %></td>
     <td class="text-center">
        <%= link_to 'Delete',tr_keagamaan_path(tr_keagamaan), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_keagamaan_path(tr_keagamaan), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_keagamaan_path(tr_keagamaan), class: 'btn btn-primary' %>
              
            </td>
      
</tbody>
</tr>
<% end %>
<% end %>
<% if current_ms_user.role == "2" %>
<% @tr_keagamaan.each_with_index do |tr_keagamaan, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_keagamaan.tanggal %> </td>
      <td> <%= tr_keagamaan.judul %> </td>
      <td> <%= tr_keagamaan.kesimpulan %> </td>
      <td> <%= tr_keagamaan.nama %> </td>
      <td> <%= tr_keagamaan.status %></td>
     <td class="text-center">
        <%= link_to 'Setuju',activate_keagamaan_path(id:tr_keagamaan.id), class: 'btn btn-primary', method: :patch%> 
      </td>
      
</tbody>
</tr>
<% end %>
<% end %>