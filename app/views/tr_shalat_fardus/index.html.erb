<br>
<center><h5>Shalat Fardhu</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_shalat_dhuha_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tanggal</th>
      <th scope="col">Status</th>
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
<% @tr_shalat_dhuhas.each_with_index do |tr_shalat_dhuha, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_shalat_dhuha.tanggal %> </td>
      <td> <%= tr_shalat_dhuha.status %> </td>
     <td class="text-center">
        <%= link_to 'Delete',tr_shalat_dhuha_path(tr_shalat_dhuha), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_shalat_dhuha_path(tr_shalat_dhuha), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_shalat_dhuha_path(tr_shalat_dhuha), class: 'btn btn-primary' %>
              
            </td>
      <% end %>
</tbody>
</tr>
