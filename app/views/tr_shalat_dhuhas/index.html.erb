<br>
<center><h5>Shalat Dhuha</h5></center>
<div style="float: right">
  <%= link_to 'Add Data', new_tr_shalat_dhuha_path, class: 'btn btn-success' %>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Kode</th>
      <th scope="col">Tanggal</th>
      <% if current_ms_user.role == "2" %>
      <th scope="col">Nama</th>
      <% end %>
      <th scope="col">Status</th>
      <th scope="col" width="300">Action</th>
    </tr>
  </thead>
  <% if current_ms_user.role == "1" %>
<% @tr_shalat_dhuhas.each_with_index do |tr_shalat_dhuha, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_shalat_dhuha.kode_shalat %> </td>
      <td> <%= tr_shalat_dhuha.tanggal %> </td>
      <td> <%= tr_shalat_dhuha.status %> </td>
     <td class="text-center">
        <%= link_to 'Delete',tr_shalat_dhuha_path(tr_shalat_dhuha), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_shalat_dhuha_path(tr_shalat_dhuha), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_shalat_dhuha_path(tr_shalat_dhuha), class: 'btn btn-primary' %>
              
            </td>
    
</tbody>
</tr>
  <% end %>
  <% end %>
 <% if current_ms_user.role == "2" %>
 <% @tr_shalat_dhuha.each_with_index do |tr_shalat_dhuha, index|%>
<tbody>
<tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= tr_shalat_dhuha.kode_shalat %> </td>
      <td> <%= tr_shalat_dhuha.tanggal %> </td>
      <td> <%= tr_shalat_dhuha.nama %> </td>
      <td> <%= tr_shalat_dhuha.status %> </td>
     <td class="text-center">
        <%= link_to 'Setuju',activate_dhuha_path(id:tr_shalat_dhuha.id), class: 'btn btn-primary', method: :patch%> 
      </td>
    
</tbody>
</tr>
  <% end %>
  <% end %>